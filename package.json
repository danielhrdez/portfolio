    "react-scripts": "5.0.1",
    "sass": "^1.54.9",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "lang": "npx ts-node scripts/makeLanguageJSON.ts",
    "lang-watch": "npm run lang -- --watch",
    "start": "npm run lang-watch & react-scripts start",
    "build": "npm run lang ; react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.{js,ts,jsx,tsx}",
    "format": "npm run lint --fix ; npx prettier --write src/**/*.{js,jsx,ts,tsx}",
    "commit": "npm run format ; git add . ; git commit -m",
    "patch": "npm run commit",
    "postpatch": "npm version patch ; git push --follow-tags",
    "minor": "npm run commit",
    "postminor": "npm version minor ; git push --follow-tags",
    "major": "npm run commit",
    "postmajor": "npm version major ; git push --follow-tags"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
